# Example environment variables for the backend
# Copy this file to `.env` and replace the placeholder values with your real secrets.

# Port number your backend server will run on
PORT=3001

# MongoDB connection string (replace with your own Atlas URI)
# Example: mongodb+srv://<username>:<password>@cluster0.mongodb.net/todo-app?retryWrites=true&w=majority
MONGO_URL=your_mongodb_connection_string_here

# Secret key used for signing JWT tokens
JWT_SECRET=your_jwt_secret_here

# Google Gemini API Key (or other AI provider key)
GEMINI_API_KEY=your_gemini_api_key_here
